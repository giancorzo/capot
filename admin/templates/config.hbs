<h1 class="page-header">{{ glyphicon 'cog' }} Configuration</h1>

<div class="panel panel-default smtp-config">
  <div class="panel-heading">
    <h3 class="panel-title">{{ glyphicon 'send' }} Outgoing Mail</h3>
  </div>
  <div class="panel-body">
    <form role="form" id="smtp-form">
      <div class="form-group">
        <label for="smtp-service">Service</label>
        {{ smtpServicePicker smtp.service }}
      </div>
      <div class="form-group">
        <label for="smtp-user">Username</label>
        <input type="text" class="form-control" name="smtp-user"
          id="smtp-user" value="{{smtp.user}}">
      </div>
      <div class="form-group">
        <label for="smtp-pass">Password</label>
        <input type="password" class="form-control" name="smtp-pass"
          id="smtp-pass" value="{{smtp.pass}}">
      </div>
      <button type="submit" class="btn btn-primary">Update</button>
    </form>
  </div>
</div>

<div class="panel panel-default analytics-config">
  <div class="panel-heading">
    <h3 class="panel-title">{{ glyphicon 'stats' }} Analytics</h3>
  </div>
  <div class="panel-body">
    <form role="form" id="analytics-config-form">
      <div class="form-group">
        <label for="analytics-google-tracking-id">Google Analytics Tracking ID</label>
        <input type="text" class="form-control"
          name="analytics-google-tracking-id" id="analytics-google-tracking-id"
          value="{{analytics.google.trackingId}}">
      </div>
      <button type="submit" class="btn btn-primary">Update</button>
    </form>
  </div>
</div>

